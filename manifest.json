{
    "manifest_version": 2,
    "name": "Chrome media player",
    "description": "For media player",
    "version": "1.0",
    "icons": { "128" : "assets/img/icon_128.png"}, 
    "permissions": ["storage"],
    "background": {
      "persistent": true,
      "page": "src/view/media_player.html"
    },
    "browser_action": {   
     "default_icon" : "assets/img/icon.png",
     "default_popup": "src/view/main.html" 
    }

   }